<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language SYSTEM "language.dtd">
<language name="Scratch" version="1" kateversion="5.0" section="Sources" extensions="*.scratch" license="LGPLv2+" author="so61pi (so61pi.re@gmail.com)" style="cstyle" indenter="cstyle">
    <highlighting>
        <contexts>
            <context name="X1" attribute="Normal Text" lineEndContext="#pop">
                <RegExpr String="^[-+*] .*$" attribute="Cyan"/>
                <RegExpr String="^  [-+*] .*" attribute="YellowOrange"/>
                <RegExpr String="^    [-+*] .*" attribute="Purple"/>

                <RegExpr String="^.*:" attribute="Beginner"/>
            </context>
        </contexts>

        <itemDatas>
            <itemData name="Normal Text" defStyleNum="dsNormal"/>

            <itemData name="YellowOrange" defStyleNum="dsKeyword" color="#FFD800"/>
            <itemData name="Purple" defStyleNum="dsKeyword" color="#D67FFF"/>
            <itemData name="Cyan" defStyleNum="dsKeyword" color="#7FFFFF"/>

            <itemData name="Beginner" defStyleNum="dsKeyword"/>
        </itemDatas>
    </highlighting>
</language>